<!-- new login design -->
<div class="auth-bg">
    <div class="layer"></div>
    <div class="authentication-box">
        <div class="card card-pages shadow-none">
            <div class="card-body">
                <div class="main-logo">
                    <a href="/home" class="logo logo-admin">
                        <img src="img/logo-bootstrap.png" alt="" class="img-reponsive">
                    </a>
                </div>
                <h5 class="login-title">Login to your account</h5>

                <form class="form-horizontal margin-top-30" action="/home" method="POST">

                    <div class="form-group">
                        <div class="col-12">
                            <label>Username</label>
                            <input class="form-control" type="text" required="" placeholder="Username" name="userId" id="userId">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-12">
                            <label>Password</label>
                            <input class="form-control" type="password" required="" placeholder="Password"
                                name="password" id="password">
                        </div>
                    </div>

                    <div class="form-group text-center margin-top-20">
                        <div class="col-md-12">
                            <button class="btn btn-secondary btn-block btn-lg" type="submit">
                                LogIn
                            </button>
                        </div>
                    </div>

